<h1>CREATE POST</h1>

{{#each errors}}

    <div class="alert alert-danger">
        {{message}}
    </div>

{{/each}}


<form action="/admin/posts/create" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label for="title">Title</label>
        <input name="title" type="text" class="form-control" id="title" placeholder="Enter title">
    </div>

    <div class="form-group">
        <label for="file">File Upload</label>
        <input name="file" type="file" class="form-control" id="title" placeholder="Enter title" >
    </div>

    <div class="form-group">
        <label for="title">Category</label>
        <select name="status" id="status" class="form-control">
            <option value="public">PHP</option>
            <option value="private">NODE</option>
            <option value="draft">Angular</option>
        </select>
    </div>

    <div class="form-group">
        <label for="title">Status</label>
        <select name="status" id="status" class="form-control">
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
        </select>
    </div>

    <div class="form-check">
        <label for="allowComments">
        <input type="checkbox" name="allowComments" class="form-check-input" id="allowComments" >
            Allow Comments
        </label>
    </div>


    <div class="form-group">
        <label for="description">Description</label>
        <textarea type="text" name="body" cols="30" rows="10" class="form-control" id="description" placeholder="" ></textarea>

    </div>

    <button type="submit" class="btn btn-primary">Create Post</button>

</form>
<h1>EDIT POST</h1>

<form action="/admin/posts/edit/{{post.id}}?_method=PUT" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label for="title">Title</label>

        <input name="title" type="text" class="form-control" id="title" value="{{post.title}}">
    </div>

    <div class="form-group">
        <label for="file">File Upload</label>
        <input name="file" type="file" class="form-control" id="title" placeholder="Enter title" >
    </div>

    <div class="form-group">
        <label for="title">Status</label>
        <select name="status" id="status" class="form-control">
        {{#select post.status}}
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
        {{/select}}
        </select>
    </div>

     <div class="form-group">
        <label for="title">Category</label>
        <select name="status" id="status" class="form-control">
            <option value="public">PHP</option>
            <option value="private">NODE</option>
            <option value="draft">Angular</option>
        </select>
    </div>

    <div class="form-check">
        <label for="allowComments">
        <input type="checkbox" name="allowComments" {{#if post.allowComments}} checked="checked" {{/if}} class="form-check-input" id="allowComments">
            Allow Comments
        </label>
    </div>


    <div class="form-group">
        <label for="description">Description</label>
        <textarea type="text" name="body" cols="30" rows="10" class="form-control" id="description">{{post.body}}</textarea>

    </div>

    <button type="submit" class="btn btn-primary">Update Post</button>

</form>